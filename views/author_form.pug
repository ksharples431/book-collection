extends layout

block content
  h1=title

  form(method='POST' action='')
    div.form-group
      label(for='first_name') First Name:
      input#first_name.form-control(type='text' placeholder='' name='first_name' required='true' value=(undefined===author ? '' : author.first_name) )
      label(for='last_name') Last Name:
      input#last_name.form-control(type='text' placeholder='' name='last_name' required='true' value=(undefined===author ? '' : author.last_name))
    button.btn.btn-primary(type='submit') Submit
  if errors 
    ul
      for error in errors
        li!= error.msg